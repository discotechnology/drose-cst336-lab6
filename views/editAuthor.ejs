<%- include('partials/head') %>

<h1>Updating Author Data</h1>

<form method="POST" action="/author/edit">
    <input type="hidden" name="authorId" value="<%=authorInfo[0].authorId%>">
    First Name:
    <input type="text" name="fName" value="<%=authorInfo[0].firstName%>"><br>
    Last Name:
    <input type="text" name="lName" value="<%=authorInfo[0].lastName%>""><br>
    Date of Birth:
    <input type="date" name="birthDate" value="<%=authorInfo[0].dobISO%>">
    <br>
    Date of Death:  
    <input type="date" name="deathDate" value="<%=authorInfo[0].dodISO%>">
    <br>
    Sex:
    <input type="radio" name="sex" value="M" 
        <% if(authorInfo[0].sex == 'M'){ %> checked <% } %>>
        <label for="M">M</label>
    <input type="radio" name="sex" value="F"
        <% if(authorInfo[0].sex == 'F'){ %> checked <% } %>>
        <label for="F">F</label><br>
    Country:
    <select name="country">
        <option value="">Select country:</option>
        <% for(let i in countries) { %>
            <option value="<%=countries[i]%>"
                <% if(authorInfo[0].country == countries[i]) { %> selected <% } %>><%=countries[i]%></option>}
        <% } %>
    </select>
    <br>
    Profession:
    <input type="text" name="profession" value="<%=authorInfo[0].profession%>"><br>
    Biography: <br>
    <textarea name="biography" rows="4" cols="50"><%=authorInfo[0].biography%></textarea><br>
    Portrait URL:
    <input type="text" name="portrait" value="<%=authorInfo[0].portrait%>"><br>
    <button>Update Author</button>
</form>

<%- include('partials/footer') %>